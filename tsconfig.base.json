{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "noEmit": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@wealthbridge/a2a": ["./packages/a2a/src"],
      "@wealthbridge/a2p": ["./packages/a2p/src"],
      "@wealthbridge/agent-kernel": ["./packages/agent-kernel/src"],
      "@wealthbridge/agent-memory": ["./packages/agent-memory/src"],
      "@wealthbridge/agent-planner": ["./packages/agent-planner/src"],
      "@wealthbridge/agent-actions": ["./packages/agent-actions/src"],
      "@wealthbridge/capsules/*": ["./packages/capsules/*/src"],
      "@wealthbridge/mcp-servers/*": ["./packages/mcp-servers/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".turbo", "coverage"]
}
